[build]
jobs = 1                  # number of parallel jobs, defaults to # of CPUs
rustc = "rustc"           # the rust compiler tool
rustdoc = "rustdoc"       # the doc generator tool
target = "wasm32-unknown-unknown"         # lib for the target triple
target-dir = "target"     # path of where to place all generated artifacts
rustflags = ["-C", "lto", "-O"]  # custom flags to pass to all compiler invocations
incremental = false        # whether or not to enable incremental compilation
dep-info-basedir = ".."   # full path for the base directory for targets in depfiles

[term]
verbose = true        # whether cargo provides verbose output
color = 'auto'         # whether cargo colorizes output
